<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="miklos.martin.learningandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name="miklos.martin.learningandroid.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="miklos.martin.learningandroid.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="miklos.martin.learningandroid.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="miklos.martin.learningandroid.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="miklos.martin.learningandroid.TextPlay"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="miklos.martin.learningandroid.Email"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>

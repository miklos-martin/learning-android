<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you think about %s?"
        android:id="@+id/tvQuestion"
        android:layout_gravity="left|center_vertical"
        android:textSize="@dimen/label_font_size"/>

    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/rgAnswer"
        android:layout_margin="@dimen/activity_horizontal_margin">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About what?"
            android:id="@+id/rbWhat"
            android:checked="true"
            android:textSize="@dimen/default_font_size"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I think it's OK"
            android:id="@+id/rbOK"
            android:checked="false"
            android:textSize="@dimen/default_font_size"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I don't think at all"
            android:id="@+id/rbDont"
            android:checked="false"
            android:textSize="@dimen/default_font_size"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:id="@+id/bReturn"
        android:layout_gravity="left|center_vertical"
        android:textSize="@dimen/default_font_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvSent"
        android:layout_gravity="left|center_vertical"
        android:textSize="@dimen/default_font_size"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
</LinearLayout>
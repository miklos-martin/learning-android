<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="miklos.martin.learningandroid">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">


        <activity android:label="@string/app_name" android:name="miklos.martin.learningandroid.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name" android:name="miklos.martin.learningandroid.Menu">
            <intent-filter>
                <action android:name="miklos.martin.learningandroid.MENU"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name" android:name="miklos.martin.learningandroid.MainActivity">
            <intent-filter>
                <action android:name="miklos.martin.learningandroid.MAINACTIVITY"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
